<odoo>
    <data>
        <record id="dpd_france_location_page" model="ir.ui.view">
            <field name="name">Sales Order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[last()]" position="after">
                    <page string="DPD France Locations">
                        <field name="dpd_france_location_ids" readonly="1">
                            <tree nolabel="1" readonly="1">
                                <field name="pudo_id"/>
                                <field name="pudo_name"/>
                                <field name="pudo_street"/>
                                <field name="pudo_zip"/>
                                <field name="pudo_city"/>
                                <button type='object' class="fa fa-arrow-right oe_link" name="set_location"
                                        string="Use Location"/>
                            </tree>
                        </field>
                        <group>
                            <field name="dpd_france_location_id" readonly="1"/>
                            <button type='object' class="fa fa-arrow-right oe_link" name="get_locations"
                                    string="Get Locations"/>

                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>