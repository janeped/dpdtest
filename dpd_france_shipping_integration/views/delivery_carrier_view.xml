<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="dpd_france_method_configuration" model="ir.ui.view">
        <field name="name">Mondial Relay Carrier Information</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='destination']" position='before'>
                <page string="DPD France Configuration" name="dpd_france_configuration"
                      attrs="{'invisible': [('delivery_type', '!=', 'dpd_fr')]}">
                    <group>
                        <group>
                            <field name="company_id" attrs="{'required': [('delivery_type', '=', 'dpd_fr')]}"/>
                            <field name="dpd_service" string="Delivery Method"
                                   attrs="{'required': [('delivery_type', '=', 'dpd_fr')]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>